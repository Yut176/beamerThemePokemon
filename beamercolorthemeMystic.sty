\mode<presentation>

\definecolor{mysticblue}{RGB}{31,94,234}
\definecolor{pokemonblack}{RGB}{0,0,0}
\definecolor{pokemonwhite}{RGB}{255,255,255}

\colorlet{my@colorA}{mysticblue}
\colorlet{my@colorB}{my@colorA!50!pokemonwhite}

\setbeamercolor*{logo}{fg=my@colorA,bg=black}

\setbeamercolor*{normal text}{fg=black,bg=white}
\setbeamercolor*{alerted text}{fg=red}
\setbeamercolor*{example text}{fg=black}
\setbeamercolor*{structure}{fg=my@colorA, bg=white}


\setbeamercolor*{palette primary}{fg=white,bg=my@colorA}
\setbeamercolor*{palette secondary}{fg=white,bg=pokemonblack}
\setbeamercolor*{palette tertiary}{fg=white,bg=my@colorA}
\setbeamercolor*{palette quaternary}{fg=white,bg=black}

\setbeamercolor{titlelike}{fg=white, bg=my@colorA}
\setbeamercolor{frametitle}{fg=white, bg=my@colorA}
\setbeamercolor{frametitle right}{fg=white, bg=my@colorA}

\setbeamercolor{sidebar}{bg=pokemonblack}

\setbeamercolor*{palette sidebar primary}{fg=pokemonwhite}
\setbeamercolor*{palette sidebar secondary}{fg=pokemonwhite}
\setbeamercolor*{palette sidebar tertiary}{fg=pokemonwhite}
\setbeamercolor*{palette sidebar quaternary}{fg=pokemonwhite}

\setbeamercolor*{item projected}{fg=pokemonwhite,bg=my@colorA}

\setbeamercolor{block title}{fg=white,bg=my@colorA}
\setbeamercolor{block title alerted}{use=alerted text,fg=white,bg=alerted text.fg!75!black}
\setbeamercolor{block title example}{use=example text,fg=white,bg=example text.fg!75!black}
\setbeamercolor{block body}{parent=normal text,use=block title,bg=block title.bg!15!bg}
\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=block title alerted.bg!15!bg}
\setbeamercolor{block body example}{parent=normal text,use=block title example,bg=block title example.bg!15!bg}

\setbeamercolor{section in toc}{fg=my@colorA!50!black}
\setbeamercolor{subsection in toc}{fg=black}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

\mode
<all>
