\newcommand{\pokebackground}[2]{%
\begin{tikzpicture}[scale=#1]
  \filldraw[fill=gray,draw=gray,opacity=#2](0,0)circle[radius=2cm*0.75];
  \filldraw[white](0,0)circle[radius=2cm*0.35];
  \filldraw[white](2cm*-0.76,2cm*-0.075)rectangle(2cm*0.76,2cm*0.075);
  \filldraw[fill=gray,draw=gray,opacity=#2](0,0)circle[radius=2cm*0.20];
\end{tikzpicture}%
}
