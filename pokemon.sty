\newcommand{\MonsterBall}[1]{
\begin{tikzpicture}[scale=#1,baseline=(X.base)]
  \coordinate(X)at(0,-6pt);
  \filldraw[red,draw=red](1:7.8pt)arc(1:179:7.8pt)--cycle;
  \filldraw[white,draw=white](-1:7.8pt)arc(-1:-179:7.8pt)--cycle;
  \draw[line width=0.6pt*#1,black](0,0)circle[radius=8pt];
  \draw[line width=0.6pt*#1,black](180:8pt)--(0:8pt);
  \filldraw[line width=0.6pt*#1,draw=black,fill=white](0,0)circle[radius=3pt];
  \filldraw[line width=0.1pt,fill=gray,draw=black](0,0)circle[radius=1.0pt];
\end{tikzpicture}%
}
\newcommand{\SuperBall}[1]{
\begin{tikzpicture}[scale=#1,baseline=(X.base)]
  \coordinate(X)at(0,-6pt);
  \filldraw[cyan,draw=cyan](1:7.8pt)arc(1:179:7.8pt)--cycle;;
  \filldraw[white,draw=white](-1:7.8pt)arc(-1:-179:7.8pt)--cycle;
  \filldraw[red](35:4.5pt)--(55:4.5pt)--(55:7.9pt)arc(55:35:7.9pt)--cycle;
  \filldraw[red](145:4.5pt)--(125:4.5pt)--(125:7.9pt)arc(125:145:7.9pt)--cycle;
  \draw[line width=0.6pt*#1,black](0,0)circle[radius=8pt];
  \draw[line width=0.6pt*#1,black](180:8pt)--(0:8pt);
  \filldraw[line width=0.6pt*#1,draw=black,fill=white](0,0)circle[radius=3pt];
  \filldraw[line width=0.1pt,fill=gray,draw=black](0,0)circle[radius=1.0pt];
\end{tikzpicture}%
}
\newcommand{\HyperBall}[1]{
\begin{tikzpicture}[scale=#1,baseline=(X.base)]
  \coordinate(X)at(0,-6pt);
  \filldraw[black](1:7.8pt)arc(1:179:7.8pt)--cycle;;
  \filldraw[white,draw=white](-1:7.8pt)arc(-1:-179:7.8pt)--cycle;
  \filldraw[yellow](-6.0pt,0.6pt)rectangle(-4.4pt,5.2pt);
  \filldraw[yellow](6.0pt,0.6pt)rectangle(4.4pt,5.2pt);
  \filldraw[yellow](135:6pt)arc(135:45:6pt)--(45:7.9pt)arc(45:135:7.9pt)--cycle;
  \draw[line width=0.6pt*#1,black](0,0)circle[radius=8pt];
  \draw[line width=0.6pt*#1,black](180:8pt)--(0:8pt);
  \filldraw[line width=0.6pt*#1,draw=black,fill=white](0,0)circle[radius=3pt];
  \filldraw[line width=0.1pt,fill=gray,draw=black](0,0)circle[radius=1.0pt];
\end{tikzpicture}%
}
\newcommand{\MasterBall}[1]{%
\definecolor{MBALL}{rgb}{0.6, 0.4, 0.8}
\begin{tikzpicture}[scale=#1,baseline=(X.base)]
  \coordinate(X)at(0,-6pt);
  \filldraw[fill=MBALL,draw=MBALL](1:7.8pt)arc(1:179:7.8pt)--cycle;;
  \filldraw[white,draw=white](-1:7.8pt)arc(-1:-179:7.8pt)--cycle;
  \draw[white,line width=0.6pt*#1*0.8](120:4.4pt)--(105:6.0pt)--(90:4.9pt)--(75:6.0pt)--(60:4.4pt);
  \filldraw[red](115:7.8pt)to[out=-100,in=0](150:7.8pt)arc(150:115:7.8pt);
  \filldraw[red](65:7.8pt)to[out=-80,in=180](30:7.8pt)arc(30:65:7.8pt);
  \draw[line width=0.6pt*#1,black](0,0)circle[radius=8pt];
  \draw[line width=0.6pt*#1,black](180:8pt)--(0:8pt);
  \filldraw[line width=0.6pt*#1,draw=black,fill=white](0,0)circle[radius=3pt];
  \filldraw[line width=0.1pt,fill=gray,draw=black](0,0)circle[radius=1.0pt];
\end{tikzpicture}%
}
